using System;
using System.IO;
using iTextSharp.text;
using iTextSharp.text.pdf;

class Program
{
    static void Main()
    {
        string fileName = "Kundan_Kumar_Resume.pdf";
        string path = Path.Combine(AppDomain.CurrentDomain.BaseDirectory, fileName);

        using (FileStream fs = new FileStream(path, FileMode.Create, FileAccess.Write, FileShare.None))
        {
            Document doc = new Document(PageSize.A4, 40, 40, 40, 40); // margins
            PdfWriter.GetInstance(doc, fs);
            doc.Open();

            // Define Times New Roman fonts
            Font nameFont = FontFactory.GetFont("Times-Roman", 16, Font.BOLD);
            Font titleFont = FontFactory.GetFont("Times-Roman", 11, Font.ITALIC);
            Font contactFont = FontFactory.GetFont("Times-Roman", 10);
            Font sectionFont = FontFactory.GetFont("Times-Roman", 12, Font.BOLD);
            Font textFont = FontFactory.GetFont("Times-Roman", 10);

            // === HEADER ===
            Paragraph name = new Paragraph("KUNDAN KUMAR", nameFont)
            {
                Alignment = Element.ALIGN_CENTER,
                SpacingAfter = 2f
            };
            doc.Add(name);

            Paragraph designation = new Paragraph("Dotnet Developer", titleFont)
            {
                Alignment = Element.ALIGN_CENTER,
                SpacingAfter = 2f
            };
            doc.Add(designation);

            Paragraph contact = new Paragraph("ðŸ“ž +91 9798501225 | ðŸ“§ kundanmth01@gmail.com", contactFont)
            {
                Alignment = Element.ALIGN_CENTER,
                SpacingAfter = 10f
            };
            doc.Add(contact);

            // === SECTIONS ===

            AddSection(doc, "CAREER OBJECTIVE", sectionFont, textFont, "Motivated and quick-learning IT professional with strong interpersonal skills, dedicated to building and maintaining productive client relationships. Proven problem-solver with experience in resolving technical issues and driving results. Seeking opportunities to apply my technical expertise and grow professionally.");

            AddSection(doc, "EXPERIENCE", sectionFont, textFont,
                "MNB Soft Solution â€” Jan 2024 â€“ Present\n" +
                "â€¢ Proficient in API design and development using C#, .NET, and .NET Core.\n" +
                "â€¢ Strong knowledge of SQL for effective database management.\n" +
                "â€¢ Integrated payment gateways (CCAvenue, CoinsPay).\n\n" +
                "WTS Net India Pvt. Ltd. â€” Jan 2023 â€“ Jan 2024\n" +
                "â€¢ Designed ASP.NET MVC Core apps with C# and SQL Server.\n" +
                "â€¢ Reviewed code and collaborated with dev teams.");

            AddSection(doc, "EDUCATION", sectionFont, textFont,
                "â€¢ MCA - IGNOU\n" +
                "â€¢ BCA - IGNOU (2020)");

            AddSection(doc, "TECHNICAL SKILLS", sectionFont, textFont,
                "â€¢ C#, .NET, .NET Core, Web API, jQuery, HTML, CSS\n" +
                "â€¢ SQL Server\n" +
                "â€¢ Languages: English, Hindi");

            AddSection(doc, "SOFT SKILLS", sectionFont, textFont,
                "Leadership, Teamwork, Creativity, Adaptability, Time Management, Decision Making");

            AddSection(doc, "PROJECTS", sectionFont, textFont,
                "â€¢ Mparchi â€“ https://mparchi.com\n" +
                "â€¢ NvShoppe â€“ https://nvshoppe.com\n" +
