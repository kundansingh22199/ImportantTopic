            doc.Close();
        }

        Console.WriteLine("âœ… PDF Created Successfully at: " + path);

        // Open PDF
        System.Diagnostics.Process.Start(new System.Diagnostics.ProcessStartInfo
        {
            FileName = path,
            UseShellExecute = true
        });
    }

    static void AddSection(Document doc, string title, Font titleFont, Font bodyFont, string bodyText)
    {
        Paragraph header = new Paragraph(title, titleFont)
        {
            SpacingBefore = 10f,
            SpacingAfter = 3f
        };
        doc.Add(header);

        Paragraph body = new Paragraph(bodyText, bodyFont)
        {
            SpacingAfter = 10f
        };
        doc.Add(body);
    }
}
